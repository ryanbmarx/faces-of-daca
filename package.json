    "browserify": "^14.4.0",
    "grunt": "^1.0.1",
    "grunt-browserify": "^5.2.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-postcss": "^0.8.0",
    "grunt-sass": "^2.0.0",
    "grunt-svgstore": "^1.0.0",
    "jimp": "^0.2.28",
    "minifyify": "^7.3.3",
    "trib-styles": "git+ssh://git@tribune.unfuddle.com:tribune/trib-styles.git"
